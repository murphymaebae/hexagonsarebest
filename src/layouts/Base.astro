---
const { title = "hexagons are best", description = "architecture is choice. systems are stories.", pageClass = "" } = Astro.props;
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=EB+Garamond:wght@400;600&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class={`site-shell ${pageClass}`.trim()}>
    <header class="masthead">
      <div class="container masthead__inner">
        <a class="masthead__brand" href="/">
          <span class="masthead__icon" aria-hidden="true">
            <svg width="36" height="36" viewBox="0 0 120 120" role="presentation" focusable="false">
              <path d="M60 14 94 34v40L60 94 26 74V34z" fill="none" stroke-width="6" />
            </svg>
          </span>
          <span class="masthead__label">
            <span>hexagons are best</span>
            <span class="masthead__sublabel">architecture as soft infrastructure</span>
          </span>
        </a>
        <nav class="masthead__nav" aria-label="Primary">
          <a href="/garden">garden</a>
          <a href="/projects">projects</a>
          <a href="/about">about</a>
        </nav>
      </div>
    </header>
    <main>
      <div class="container">
        <slot />
      </div>
    </main>
    <footer class="footer">
      <div class="container footer__inner">
        <div>© {new Date().getFullYear()} Murphy‑Mae</div>
        <div class="footer__meta">built with Astro · <span class="pill">kind systems</span></div>
      </div>
    </footer>
  </body>
</html>
